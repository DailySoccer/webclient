<?xml version='1.0' encoding='utf-8'?>
<widget id="com.epiceleven.futbolcuatro" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FutbolCuatro</name>
    <description>
        Juega a Fútbol Cuatro, el mejor Daily Fantasy Manager gratuito de Mediaset. Crea tu alineación, elige un torneo y gana.
    </description>
    <author email="support@futbolcuatro.com" href="http://futbolcuatro.epiceleven.com">
        Unusual Wonder
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="all" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="local"/>
        <preference name="SuppressesIncrementalRendering" value="true"/>
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="Orientation" value="all" />
        
        <!-- iOS 9.0+ -->
        <icon src="res/ios/icon-83.5@2x.png" width="167" height="167" />
        <!-- iOS 8.0+ -->
